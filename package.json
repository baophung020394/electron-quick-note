{
  "name": "QuickNote",
  "version": "0.9.0",
  "description": "Master Electron Project",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "watch": "nodemon --exec electron .",
    "reset": "git reset --hard",
    "build": "electron-builder -mw",
    "release": "electron-builder -mw -p 'onTagOrDraft'",
    "win-cert": "electron-builder create-self-signed-cert -p baophung"
  },
  "repository": "https://github.com/baophung020394/electron-quick-note",
  "homepage": "https://github.com/baophung020394/electron-quick-note",
  "keywords": [
    "Electron",
    "Master Electron",
    "demo"
  ],
  "author": "GitHub, baophung",
  "license": "CC0-1.0",
  "dependencies": {
    "electron-log": "^4.4.8",
    "electron-updater": "^5.3.0",
    "electron-window-state": "^5.0.3"
  },
  "devDependencies": {
    "electron": "^11.0.0",
    "electron-builder": "^23.6.0",
    "nodemon": "^2.0.0"
  },
  "build": {
    "appId": "com.waveasean.quicknot",
    "copyright": "Copyright baophung",
    "publish": {
      "provider":"github"
    },
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "certificateFile": "private/baophung.p12",
      "certificatePassword": "",
      "verifyUpdateCodeSignature": false,
      "publisherName": "baophung",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "category": "Utility"
    }
  }
}
